{
  "name": "sauce-code",
  "displayName": "SauceCode",
  "description": "Sauce your code with context",
  "icon": "assets/icon.png",
  "version": "0.5.0",
  "publisher": "mki",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkidv/sauce-code.git"
  },
  "bugs": {
    "url": "https://github.com/mkidv/sauce-code/issues"
  },
  "homepage": "https://github.com/mkidv/sauce-code#readme",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sauceCode.aiPaste",
    "onCommand:sauceCode.copyTree",
    "onCommand:sauceCode.aiPasteFromExplorer",
    "onCommand:sauceCode.copyTreeFromExplorer",
    "onCommand:sauceCode.copyLast",
    "onCommand:sauceCode.copyNextPart",
    "onCommand:sauceCode.showHistory"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "sauceCode.aiPasteFromExplorer",
          "group": "sauceCode@1",
          "when": "resourceScheme == file"
        },
        {
          "command": "sauceCode.copyTreeFromExplorer",
          "group": "sauceCode@2",
          "when": "resourceScheme == file"
        }
      ]
    },
    "commands": [
      {
        "command": "sauceCode.aiPaste",
        "title": "SauceCode: AI Paste"
      },
      {
        "command": "sauceCode.copyTree",
        "title": "SauceCode: Copy Tree"
      },
      {
        "command": "sauceCode.aiPasteFromExplorer",
        "title": "SauceCode: AI Paste (from selection)"
      },
      {
        "command": "sauceCode.copyTreeFromExplorer",
        "title": "SauceCode: Copy Tree (from selection)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "sauceCode",
      "properties": {
        "sauceCode.defaultGlob": {
          "type": "string",
          "default": "**/*.{dart,ts,tsx,js,jsx,rs,py,go,java,kt,c,cc,cpp,h,hpp,cs,swift,sh,yml,yaml,toml,md,sql,json}",
          "description": "Default file glob used when running AI Paste from the command."
        },
        "sauceCode.exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/.git/**",
            "**/build/**",
            "**/.dart_tool/**",
            "**/node_modules/**",
            "**/dist/**",
            "**/*.g.dart",
            "**/*.freezed.dart",
            "**/*.pb*.dart",
            "**/*.min.*",
            "**/*.map",
            "**/*.lock",
            "**/*.keystore",
            "**/*.jks",
            "**/*.p12",
            "**/*.pem",
            "**/*.crt",
            "**/*.der"
          ],
          "description": "Additional exclusion globs applied when searching files."
        },
        "sauceCode.maxBytesPerFile": {
          "type": "number",
          "default": 2000000,
          "description": "Skip files larger than this size (in bytes)."
        },
        "sauceCode.stripMode": {
          "type": "string",
          "enum": [
            "none",
            "safe",
            "keep-doc"
          ],
          "default": "safe",
          "description": "Comment stripping mode: none, safe (strip comments), or keep-doc (keep doc comments)."
        },
        "sauceCode.stripDocstringsInPython": {
          "type": "boolean",
          "default": true,
          "description": "Also strip triple-quoted Python docstrings (ignored when stripMode is keep-doc)."
        },
        "sauceCode.compactBlankLines": {
          "type": "boolean",
          "default": true,
          "description": "Collapse multiple blank lines in the final bundle output (post-process)."
        },
        "sauceCode.maskSecrets": {
          "type": "boolean",
          "default": true,
          "description": "Mask common secret patterns (API keys, JWT, PEM blocks) in copied content."
        },
        "sauceCode.normalizeTabsToSpaces": {
          "type": "boolean",
          "default": true,
          "description": "Normalize TAB characters to two spaces in copied content."
        },
        "sauceCode.maxDepthExplorer": {
          "type": "number",
          "default": 1024,
          "minimum": 1,
          "description": "Max recursion depth when expanding folders in Explorer selection (folderCopyMode=all)."
        },
        "sauceCode.tokenBudget": {
          "type": "number",
          "default": 12000,
          "description": "Approximate token budget per part (tokens â‰ˆ characters/4)."
        },
        "sauceCode.splitOversizedFiles": {
          "type": "boolean",
          "default": true,
          "description": "Split single files that exceed the token budget into multiple parts."
        },
        "sauceCode.oversizedChunkLines": {
          "type": "number",
          "default": 400,
          "description": "Number of lines per sub-part when splitting oversized files."
        },
        "sauceCode.includeTree": {
          "type": "boolean",
          "default": true,
          "description": "Include an ASCII directory tree of the project in the copied bundle."
        },
        "sauceCode.folderCopyMode": {
          "type": "string",
          "enum": [
            "all",
            "respectExcludes"
          ],
          "default": "all",
          "description": "When starting from folders in Explorer: include every file (ignore excludes/size) or respect exclusion globs and size limits."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
