{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "types": ["node", "vscode"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@cmds/*": ["src/cmds/*"]
    }
  },
  "include": ["src/**/*"]
}
